<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="./style.css">
<div class="box">
    <div class="box-form">
        <div class="box-login-title">
            <button id="loginbut" class="btn text-black btn-link">
                <h2>Sign In</h2>
            </button>&emsp;
            <button id="registerbut" class="btn text-black">
                <h2>Sign Up</h2>
            </button>
        </div>
        <p class="text-danger">@TempData["Text"]</p>
        <div class="box-login">
            <div class="fielset-body" id="login_form">
                <form asp-action="Login" asp-controller="Home">
                    <p class="field">
                        <label for="user">帳號</label>
                        <input type="text" id="user" name="username" title="Username" />
                    </p>
                    <p class="field">
                        <label for="pass">密碼</label>
                        <input type="password" id="pass" name="password" title="password" />
                    </p>
                    <input class="btn submitbtn" type="submit" id="do login" value="登入" title="Get Started" />
                </form>
            </div>
        </div>
        <div class="box-register" style="display:none">
            <div class="fielset-body" id="login_form">
                <form asp-action="Register" asp-controller="Home">
                    <p class="field">
                        <label for="user">帳號</label>
                        <input type="text" id="user" name="username" title="Username" />
                    </p>
                    <p class="field">
                        <label for="pass">密碼</label>
                        <input type="password" id="pass" name="password" title="password" />
                        <input type="password" id="passcon" placeholder="請再輸入一次密碼" />
                    </p>
                    <input class="btn submitbtn" type="submit" id="do login" value="註冊" title="Get Started" />
                </form>
            </div>
        </div>
    </div>
</div>
<div id="loadingIndicator"><div class="spinner"></div></div>
<style>
    .box {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .box-form {
        width: 400px;
        padding: 40px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .box-login-tab {
        height: 20px;
        /* 设置登录标签样式 */
    }

    .box-login-title {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .box-login-title .i-login {
            /* 设置登录图标样式 */
        }

        .box-login-title h2 {
            margin-left: 10px;
            /* 设置登录标题样式 */
        }

    .box-login {
        /* 设置登录表单样式 */
    }

    .fieldset-body {
        position: relative;
    }

    .field {
        margin-bottom: 20px;
    }

        .field label {
            display: block;
            /* 设置标签样式 */
        }

        .field input[type="text"],
        .field input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            /* 设置输入框样式 */
        }

    input[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        cursor: pointer;
        /* 设置提交按钮样式 */
    }

    #loadingIndicator {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* 半透明的背景色 */
        z-index: 9999;
        display: none;
    }

        #loadingIndicator::after {
            content: "Loading...";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 20px;
            animation: rotate 1s infinite linear;
        }
</style>
<script>
    $(document).ready(function () {
        $("#loginbut").click(function () {
            $(this).addClass("btn-link");
            $("#registerbut").removeClass("btn-link");
            $(".box-login").show();
            $(".box-register").hide();
        });

        $("#registerbut").click(function () {
            $(this).addClass("btn-link");
            $("#loginbut").removeClass("btn-link");
            $(".box-register").show();
            $(".box-login").hide();
        });

        $(".submitbtn").click(function(){
            showLoading();
        })
    });

    function showLoading() {
        // 显示加载状态，覆盖整个视窗
        var $loadingIndicator = $("#loadingIndicator");
        $loadingIndicator.fadeIn();
        $(document.body).css("overflow", "hidden"); // 禁用滚动条
    }

    function hideLoading() {
        // 隐藏加载状态
        var $loadingIndicator = $("#loadingIndicator");
        $loadingIndicator.fadeOut();
        $(document.body).css("overflow", ""); // 启用滚动条
    }
</script>