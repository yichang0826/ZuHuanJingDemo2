@model ZuHuanJingDemo2.Models.Member

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member_Id" />
            <div class="form-group">
                <label asp-for="Member_Name" class="control-label"></label>
                <input asp-for="Member_Name" class="form-control" />
                <span asp-validation-for="Member_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Account" class="control-label"></label>
                <input asp-for="Member_Account" class="form-control" />
                <span asp-validation-for="Member_Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Email" class="control-label"></label>
                <input asp-for="Member_Email" class="form-control" />
                <span asp-validation-for="Member_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Is_Baned" class="control-label">是否封鎖</label>
                <input asp-for="Is_Baned" type="radio" value="0"/>No
                <input asp-for="Is_Baned" type="radio" value="1" />Yes
                <span asp-validation-for="Is_Baned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_CreateDate" class="control-label"></label>
                <input asp-for="Member_CreateDate" class="form-control" />
                <span asp-validation-for="Member_CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
