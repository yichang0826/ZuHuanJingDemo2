@model ZuHuanJingDemo2.Models.Member

@{
    ViewData["Title"] = "Create";
    List<License> licenseslist = ViewData["licenseslist"] as List<License>;
}

<h1>新建會員</h1>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">Back to List</a>
        </div>
    </div><br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Member_Name" class="control-label"></label>
                <input asp-for="Member_Name" class="form-control" placeholder="名稱" autocomplete="off" />
                <span asp-validation-for="Member_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Account" class="control-label"></label>
                <input asp-for="Member_Account" class="form-control" placeholder="帳號" autocomplete="off" />
                <span asp-validation-for="Member_Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Password" class="control-label"></label>
                <input asp-for="Member_Password" class="form-control" placeholder="密碼" autocomplete="off" />
                <span asp-validation-for="Member_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Email" class="control-label"></label>
                <input asp-for="Member_Email" class="form-control" placeholder="郵箱" autocomplete="off" />
                <span asp-validation-for="Member_Email" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Is_Baned" class="control-label"></label>
                <div>
                    <input asp-for="Is_Baned" name="Isbaned" value=0 />
                </div>
                <span asp-validation-for="Is_Baned" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Member_CreateDate" class="control-label"></label>
                <input asp-for="Member_CreateDate" class="form-control" />
                <span asp-validation-for="Member_CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <p>證照(可複選)</p>
            @foreach (var license in licenseslist)
            {
                <div>
                    <input type="checkbox" id="@license.License_Id" name="selectedLicenses" value="@license.License_Id" />
                    <label for="@license.License_Id">@license.License_Name</label>
                </div>
            }
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
