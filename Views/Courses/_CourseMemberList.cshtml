@model List<ZuHuanJingDemo2.Models.Member>


@if (Model != null)
{
    <table>
        <thead>
            <tr>
                <th>編號</th>
                <th>名稱</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Member_Id)</td>
                    <td><a asp-controller="Member" asp-action="Details" asp-route-id="@item.Member_Id">@Html.DisplayFor(modelItem => item.Member_Name)</a></td>
                </tr>
            }
        </tbody>
    </table>
}
